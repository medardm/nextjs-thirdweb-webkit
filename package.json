{
  "name": "next-third-webkit",
  "version": "0.1.0",
  "private": true,
  "prisma": {
    "schema": "src/database/schema.prisma",
    "seed": "ts-node src/database/seed.ts"
  },
  "engines": {
    "node": ">=16.15.1",
    "yarn": ">=1.22.19",
    "npm": "please-use-yarn"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "export": "next export",
    "deploy": "next build && next export && npx thirdweb@latest upload out",
    "make:template": "hygen generator new:template",
    "make:model": "hygen generator new:model",

    "migrate:dev": "npx prisma migrate dev",
    "migrate:reset": "npx prisma migrate reset",
    "db:seed": "npx prisma db seed",

    "prisma:studio": "npx prisma studio",
    "prisma:generate": "npx prisma generate",
    "production:build": "npx prisma generate && npx prisma migrate deploy && next build"
  },
  "dependencies": {
    "@prisma/client": "^5.5.2",
    "@thirdweb-dev/chains": "^0",
    "@thirdweb-dev/react": "^4",
    "@thirdweb-dev/sdk": "^4",
    "ethers": "^5",
    "hygen": "^6.2.11",
    "next": "^13",
    "nextjs-progressbar": "^0.0.16",
    "prisma": "^5.5.2",
    "react": "^18.2",
    "react-dom": "^18.2",
    "react-hook-form": "^7.43.0",
    "react-hot-toast": "^2.4.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.11",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8.29.0",
    "eslint-config-next": "^13",
    "typescript": "^4.9.4",
    "ts-node": "^10.9.1"
  }
}
